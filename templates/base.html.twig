<!DOCTYPE html>
<html>
    <head>
        <title>
            {% block title %}
            Welcome!
            {% endblock %}
        </title>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1" name="viewport">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/all.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav aria-label="main navigation" class="navbar" role="navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="{{ path("app_homepage") }}">
                        <span id="logo">ðŸŒ´</span>
                    </a>

                    <a aria-expanded="false" aria-label="menu" class="navbar-burger burger" data-target="mainNav" role="button">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>

                <div class="navbar-menu" id="mainNav">
                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                {% if app.user is not null %}
                                <a class="button is-primary">
                                    <strong>Profile</strong>
                                </a>
                                <a class="button is-primary"
                                href="{{ path("app_logout") }}">
                                    <strong>Log Out</strong>
                                </a>
                                {% else %}
                                <a class="button is-primary"
                                    href="{{ path("app_register") }}">
                                    <strong>Sign up</strong>
                                </a>
                                <a class="button is-primary"
                                    href="{{ path("app_login") }}">
                                    <strong>Log in</strong>
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        {% endblock %}
        {% block body %}
        <main class="container">
            {% block content %}{% endblock %}
        </main>
        {% endblock %}
        {% block javascripts %}
        <script src="{{ asset('assets/scripts/base.js') }}"></script>
        {% endblock %}
    </body>
</html>
